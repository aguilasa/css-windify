{
  "name": "tailwindify",
  "private": true,
  "version": "0.0.1",
  "description": "Tailwindify monorepo",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm --filter tailwindify-core build",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "ci": "pnpm build && pnpm check",
    "prepare": "husky install",
    "playground": "cd apps/Playground && pnpm dev",
    "playground:inline": "cd apps/Playground && npx tsx src/index.ts 'inline:color: #1f2937; font-size: 18px; line-height: 1.4; margin: 10px 20px;'",
    "playground:rule": "cd apps/Playground && npx tsx src/index.ts 'rule:.btn { display: flex; justify-content: center; gap: 12px; }'"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "postcss": "^8.5.6"
  }
}
